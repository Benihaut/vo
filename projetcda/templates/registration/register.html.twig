{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <h1>Veuillez remplir les champs</h1>
    
    <p><small>Les champs marqués d'une étoile (*) sont obligatoires.</small></p>

    {{ form_errors(registrationForm) }}

    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.email, {
            label: 'Email *'
        }) }}
        {{ form_row(registrationForm.nom, {
            label: 'Nom *'
        }) }}
        {{ form_row(registrationForm.prenom, {
            label: 'Prénom *'
        }) }}
        {{ form_row(registrationForm.adresse) }}
        {{ form_row(registrationForm.telephone) }}
        {{ form_row(registrationForm.pseudonyme, {
            label: 'Pseudonyme *'
        }) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Mot de passe *'
        }) }}
        {{ form_row(registrationForm.agreeTerms, {
            label: 'J\'accepte les conditions d\'utilisation *'
        }) }}

        <button type="submit" class="btn">S'inscrire</button>

        <p>Déjà inscrit(e) ? <a href="{{ path('app_login') }}">Me connecter</a></p>
    {{ form_end(registrationForm) }}
{% endblock %}
