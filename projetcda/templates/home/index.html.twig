{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1 class="scrolling-text">Hello {{message}}</h1>
</div>


<div style="display: flex; flex-wrap: wrap; gap: 20px;">
    {% for item in items %}
        <div style="flex: 0 1 calc(33.333% - 20px); max-width: calc(33.333% - 20px); border: 1px solid #ddd;">
            <img src="{{ asset('image/' ~ item.image) }}" alt="{{ item.title }}" style="width: 100%; height: auto;">
            <h3>{{ item.title }}</h3>
            <p>{{ item.description }}</p>
            <a href="{{ path('app_category_articles', {'id': item.category_id}) }}" class="btn btn-primary">En savoir plus</a>
        </div>
    {% endfor %}
</div>




{% endblock %}
